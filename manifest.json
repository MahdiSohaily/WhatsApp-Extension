{
  "manifest_version": 3,
  "name": "افزونه واتساپ یدک شاپ",
  "description": "این افزپنه جهت ارسال پیام های از قبل تعریف شده برای سرعت بیشتر ارتباطات می باشد.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/img/logo.jpg",
      "48": "assets/img/logo.jpg",
      "128": "assets/img/logo.jpg"
    }
  },
  "icons": {
    "16": "assets/img/logo.jpg",
    "48": "assets/img/logo.jpg",
    "128": "assets/img/logo.jpg"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["./assets/js/init.js"]
    }
  ]
}
