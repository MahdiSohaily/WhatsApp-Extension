{
  "manifest_version": 3,
  "name": "WhatsApp Predefined Messages",
  "description": "Send predefined messages on WhatsApp",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/bookmark.png",
      "48": "assets/bookmark.png",
      "128": "assets/bookmark.png"
    }
  },
  "icons": {
    "16": "assets/bookmark.png",
    "48": "assets/bookmark.png",
    "128": "assets/bookmark.png"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}
