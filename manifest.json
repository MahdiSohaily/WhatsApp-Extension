{
  "manifest_version": 2,
  "name": "WhatsApp Message Filler",
  "version": "1.0",
  "description": "Fill WhatsApp message box with predefined messages",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "css": ["content.css"]
    }
  ]
}
